
<div class = "page-box">
    <h1 class = "gradient-color page-header">Signup</h1>
</div>
<div class="container">
  <form>
    <div class="mb-3">
    <label for="email" class="form-label text-white">Email</label>
    <input type="email" autocomplete="email" class="form-control" id="email-input" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="username" class="form-label text-white">Username</label>
    <input type="username" autocomplete="username" class="form-control" id="username-input" aria-describedby="username" name="username">
  </div>
    <div class="mb-3">
    <label for="password" class="form-label text-white">New Password</label>
    <input type="password" class="form-control" id="password-input" autocomplete="new-password" name = "password">
  </div>
    <div class="row">
      <div class="col-auto me-auto">
        <button id="" class="btn btn-light btn-lg" type="submit">Signup</button>
      </div>
      <div class ="col-auto">
        <a href = "/login">
          <div id="" class="btn btn-light">Login</div>
        </a>
      </div>
    </div>
  </form>
</div>
<script src="/js/signup.js"></script>
