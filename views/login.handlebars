<div class = "page-box">
    <h1 class = "gradient-color page-header">Login</h1>
</div>
<div class="container">
  <form>
    <div class="mb-3">
    <label for="email" class="form-label text-white">Email</label>
    <input type="email" class="form-control" id="email-input" aria-describedby="email" autocomplete="email">
  </div>
    <div class="mb-3">
    <label for="password" class="form-label text-white">Password</label>
    <input type="password" class="form-control" id="password-input" name="password" autocomplete="current-password" aria-label:"password">
  </div>
    <div class="row">
      <div class="col-auto me-auto">
        <button class="btn btn-light btn-lg" type="submit">Login</button>
      </div>
      <div class ="col-auto">
        <a href = "/signup">
          <div class="btn btn-light">Signup</div>
        </a>
      </div>
    </div>
  </form>
</div>

<script src="./js/login.js"></script>
